rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Publicly readable collections
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'ymwd0rW1wnNZkYlUR7cUi9dkd452'; // Admin only
    }
    
    match /communities/{communityId} {
      allow read: if true;
      allow update: if request.auth != null; // Logged-in users can update (join/leave)
      allow create: if request.auth != null; // Logged-in users can create
      
      match /messages/{messageId} {
        allow read: if true;
        allow create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/communities/$(communityId)).data.memberIds;
      }
    }

    match /users/{userId} {
      allow read: if true;
      allow update: if request.auth != null && request.auth.uid == userId; // User can update their own profile
      allow create: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == 'ymwd0rW1wnNZkYlUR7cUi9dkd452'; // Admin only
    }

    match /winners/{winnerId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == 'ymwd0rW1wnNZkYlUR7cUi9dkd452'; // Admin only
    }

    // Authenticated writes
    match /inquiries/{inquiryId} {
      allow create: if true; // Anyone can submit an inquiry
      allow read, update, delete: if request.auth != null && request.auth.uid == 'ymwd0rW1wnNZkYlUR7cUi9dkd452'; // Admin only
    }

    match /registrations/{registrationId} {
      allow create: if request.auth != null; // Logged-in users can register
      allow read, update, delete: if request.auth != null && request.auth.uid == 'ymwd0rW1wnNZkYlUR7cUi9dkd452'; // Admin only
    }
    
    match /redeemRequests/{requestId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId; // User can create their own request
      allow read, update, delete: if request.auth != null && request.auth.uid == 'ymwd0rW1wnNZkYlUR7cUi9dkd452'; // Admin only
    }
  }
}
